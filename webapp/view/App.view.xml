<mvc:View controllerName="FCL.Flex_Col_Layout.controller.App" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m"
	xmlns:l="sap.ui.layout" xmlns:f="sap.f" xmlns:ux="sap.uxap">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" showHeader="false">
					<content>
						<l:FixFlex>
							<l:fixContent>
								<Text text="Hi Puri maharshi"/>
							</l:fixContent>
							<l:flexContent>
								<f:FlexibleColumnLayout id="flexibleColumnLayout" stateChange=".onStateChanged" layout="{FlexibleColumnUIState>/layout}"
									backgroundDesign=" Translucent"></f:FlexibleColumnLayout>
							</l:flexContent>
						</l:FixFlex>
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>